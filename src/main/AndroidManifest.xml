<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ashleybarkworth.hangmanapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="ashleybarkworth.hangmanapp.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="ashleybarkworth.hangmanapp.GameActivity"
            android:parentActivityName="ashleybarkworth.hangmanapp.MainActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>